# -*- mode: sh -*-
# vim: set ft=sh:

function zsh-gacp-mainBranch() {

    command git rev-parse --git-dir &>/dev/null || return 1

    local branch

    for branch in master mainBranch; do
        if command git show-ref -q --verify refs/heads/$branch; then
            echo "$branch"
            return
        fi
    done
    echo master
}

zsh-gacp-mainBranch "$@"
